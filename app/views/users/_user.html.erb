<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
     | <%= link_to "Delete", user_path(user, :page => params[:page]), method: :delete, data: {confirm: "Are you sure you want to delete #{user.name}?"} %>
  <% end %>
  <br />
  <%= user.email %>
</li>
